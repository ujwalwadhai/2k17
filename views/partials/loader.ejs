<div id="full-loader">
  <div class="loader-text" id="loader-text">
    <% ["<span class='letter-blue'>2</span>", "<span class='letter-green'>k</span>", "<span class='letter-red'>1</span>", "<span class='letter-yellow'>7</span>"].forEach((char, index) => { %>
    <span class="letter" style="animation-delay: <%= index * 0.12 %>s"><%- char %></span>
    <% }); %>
  </div>
</div>

<script>
  document.addEventListener('DOMContentLoaded', function() {
    var loader = document.getElementById('full-loader');
    setTimeout(() => {
      loader.classList.add('hidden'); 
      document.querySelector('.loader-after-body').style.display = 'block';
      document.querySelector('.header').style.display = '';
      setTimeout(() =>{
            loader.parentElement.removeChild(loader);
      }, 250)
    }, 2500);
  });
</script>