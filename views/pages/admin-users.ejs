<!DOCTYPE html>
<html lang="en">

<head>
    <%-include('../partials/head') %>
        <title>Admin Dashboard</title>
        <link rel="stylesheet" href="/styles/css/admin.css">
</head>

<body>
    <%-include('../partials/navbar') %>
    <%-include('../partials/loader') %>
        <br><br><br><br>

    <div class="reports-logs">
        <h2>Registered Users List</h2>
        <div class="logs-table-wrapper">
            <table class="logs-table" id="users-table">
                <thead>
                    <tr>
                        <th>User</th>
                        <th>Username</th>
                        <th>Email</th>
                        <th>Is verified</th>
                        <th>Last login</th>
                        <th>Last Active</th>
                        <th>Action</th>
                    </tr>
                </thead>
                <tbody>
                    <% if(users.length > 0){ %>
                    <% users.forEach(user=> { %>
                        <tr id="user-<%= user._id %>">
                            <td>
                                <%= user.name %>
                            </td>
                            <td>
                                <%= user.username %>
                            </td>
                            <td data-email>
                                <%= user.email %>
                            </td>
                            <td>
                                <%= user.verified %>
                            </td>
                            <td>
                                <%- user.lastLogin ? new Date(user.lastLogin).toLocaleString("en-IN", {timeZone: 'Asia/Kolkata', day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit'}) : 'Yet to login' %>
                            </td>
                            <td>
                                <%- user.lastActive ? new Date(user.lastActive).toLocaleString("en-IN", {timeZone: 'Asia/Kolkata', day: '2-digit', month: '2-digit', year: 'numeric', hour: '2-digit', minute: '2-digit'}) : 'No data available' %>
                            </td>
                            <td data-action>
                                <% if(user.registered){ %>
                                <button class="btn btn-primary" onclick="disableLoginUser('<%= user._id %>')">Disable Login</button>
                                <% } else { %>
                               <button class="btn btn-primary" onclick="disableLoginUser('<%= user._id %>')">Enable Login</button>
                                <% } %>
                            </td>
                        </tr>
                    <% })} else { %>
                        <tr>
                            <td colspan="5" style="text-align: center; color:grey">No reports found.</td>
                        </tr>
                    <% } %>
                </tbody>
            </table>
        </div>
    </div>


    <div id="toast-container" style="position: absolute; bottom: 32px; left: 50%; transform: translateX(-50%); z-index: 9999;"></div>

    <script src="/js/admin-users.js"></script>
</body>

</html>