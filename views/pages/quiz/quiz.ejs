<!DOCTYPE html>
<html lang="en">
<head>
    <%- include('../../partials/head') %>
    <title><%= title %></title>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <style>
        /* Default CSS variables (you can override these) */
        :root {
            --primary: #4F46E5;
            --primary-dark: #4338CA;
            --text-muted: rgba(255, 255, 255, 0.6);
            --text-disabled: rgba(255, 255, 255, 0.4);
            color: white;
        }

        /* General styles */
        body {
            font-family: "Lato", Helvetica, Arial, sans-serif;
            display: grid;
            place-items: center;
            min-height: 100vh;
            margin: 0;
            background: linear-gradient(rgba(0, 0, 0, 0.85), rgba(0, 0, 0, 0.85)), url('/images/jnv-bg-1.jpg') center center / cover no-repeat;
        }

        @media (max-width: 768px) {
            body {
                background: linear-gradient(rgba(0, 0, 0, 0.8), rgba(0, 0, 0, 0.8)), url('/images/jnv-bg-1.jpg') center center / cover no-repeat;
            }
        }

        .quiz-container {
            background: transparent;
            backdrop-filter: blur(16px);
            -webkit-backdrop-filter: blur(16px); /* For Safari */
            padding: 1.5rem 1.8rem;
            border-radius: 12px;
            box-shadow: 0 4px 30px rgba(0, 0, 0, 0.2);
            border: 1px solid var(--text-muted);
            width: calc(100% - 2rem);
            max-width: 600px;
            text-align: center;
        }

        h1 {
            color: var(--primary);
            font-size: 1.75rem;
            margin-top: 0;
        }

        .question {
            text-align: left;
            margin: 1.5rem 0;
            line-height: 26px;
            font-size: 1.2rem;
            color: white;
        }

        .progress-bar {
            margin-bottom: 1rem;
            color: #a0aec0; 
        }

        .options-grid {
            display: flex;
            gap: 1rem;
            flex-direction: column;
            margin-bottom: 0.3rem;
        }

        .option-card {
            position: relative;
            text-align: left;
        }

        .option-card label {
            display: block;
            padding: 0.8rem 1rem;
            border: 1px solid var(--text-disabled);
            border-radius: 8px;
            cursor: pointer;
            transition: all 0.2s ease-in-out;
            color: rgba(255, 255, 255, 0.9);
        }

        .option-card label:hover {
            border-color: var(--primary);
            color: var(--primary);
        }

        .option-card input[type="radio"] {
            position: absolute;
            opacity: 0;
            width: 0;
            height: 0;
        }

        .option-card input[type="radio"]:checked+label {
            background-color: var(--primary-dark);
            border-color: var(--primary-dark);
            color: white;
        }

        .submit-btn {
            background: var(--primary-dark);
            color: white;
            padding: 0.8rem 1.5rem;
            border: none;
            border-radius: 8px;
            font-size: 1rem;
            cursor: pointer;
            text-decoration: none;
            transition: background-color 0.2s;
            display: none;
            align-items: center;
            justify-content: center;
            width: 240px;
            margin: auto;
        }
        
        .submit-btn:hover {
            background: var(--primary);
        }

        .submit-btn span.fa,
        .submit-btn span.fal {
             margin-right: 12px;
        }
    </style>
</head>
<body>
<%- include('../../partials/navbar') %>
    <div class="quiz-container">
        <h3 style="text-align: center; margin-bottom: 1rem; color: var(--primary); font-size: 1.5rem; font-weight: 600;">Birthday quiz ðŸŽ‚</h3>
        <p id="progress-text" class="progress-bar"></p>
        <p id="question-text" class="question">Loading...</p>
        
        <form id="quiz-form">
            <div id="options-container" class="options-grid">
                </div>
            <button type="submit" class="submit-btn" id="next-btn">
                <span class="fa fa-arrow-right"></span>
                Next Question
            </button>
        </form>
    </div>

    <script>
        const questions = <%- JSON.stringify(questions) %>;
        const quizForm = document.getElementById('quiz-form');
        const questionTextEl = document.getElementById('question-text');
        const optionsContainerEl = document.getElementById('options-container');
        const progressTextEl = document.getElementById('progress-text');
        const nextBtn = document.getElementById('next-btn');

        let currentQuestionIndex = 0;
        const userAnswers = [];

        function displayQuestion() {
            if (currentQuestionIndex >= questions.length) {
                return;
            }

            const currentQuestion = questions[currentQuestionIndex];
            questionTextEl.innerText = `Guess the birthday of ${currentQuestion.questionSubjectName.toLowerCase()}?`;
            progressTextEl.innerText = `Question ${currentQuestionIndex + 1} of ${questions.length}`;
            optionsContainerEl.innerHTML = '';

            currentQuestion.options.forEach((option, index) => {
                const optionId = `option_${index}`;
                const optionCard = document.createElement('div');
                optionCard.className = 'option-card';
                optionCard.setAttribute('onclick', "document.getElementById('next-btn').click()")
                optionCard.innerHTML = `
                    <input type="radio" name="answer" id="${optionId}" value="${option}">
                    <label for="${optionId}">${option}</label>
                `;
                optionsContainerEl.appendChild(optionCard);
            });

            if (currentQuestionIndex === questions.length - 1) {
                nextBtn.innerHTML = '<span class="fal fa-check"></span> Submit Quiz';
            }
        }

        quizForm.addEventListener('submit', (event) =>{
            event.preventDefault(); 

            const selectedOption = quizForm.querySelector('input[name="answer"]:checked');
            if (!selectedOption) {
                return;
            }

            userAnswers.push(selectedOption.value);
            currentQuestionIndex++;

            if (currentQuestionIndex < questions.length) {
                displayQuestion();
            } else {
                submitQuiz();
            }
        });

        async function submitQuiz() {
            questionTextEl.innerText = 'Submitting your results...';
            optionsContainerEl.innerHTML = '';
            nextBtn.disabled = true;
            nextBtn.innerText = 'Please wait...';

            try {
                const response = await fetch('/quiz/submit', {
                    method: 'POST',
                    headers: { 'Content-Type': 'application/json' },
                    body: JSON.stringify({ answers: userAnswers })
                });

                if (!response.ok) throw new Error('Submission failed');
                
                const result = await response.json();
                window.location.href = result.redirectUrl;

            } catch (error) {
                console.error('Error submitting quiz:', error);
                questionTextEl.innerText = 'An error occurred. Please try refreshing the page.';
            }
        }
        displayQuestion();
    </script>
</body>
</html>